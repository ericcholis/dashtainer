{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': {
    'class': 'card fos_user_change_password'
} }) }}
    {{ form_widget(form._token) }}

    <div class="card-header">
        <h3 class="card-title">Update Your Password</h3>
    </div>

    <div class="card-body px-6 pt-6 pb-0">
        <div class="form-group">
            {{ form_label(form.current_password, 'Current password', {
                'label_attr': {'class': 'form-label'}
            }) }}

            {{ form_widget(form.current_password, {'attr': {
                'class': 'form-control',
                'placeholder': 'Current password',
            }}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first, 'New password', {
                'label_attr': {'class': 'form-label'}
            }) }}

            {{ form_widget(form.plainPassword.first, {'attr': {
                'class': 'form-control',
                'placeholder': 'New password',
            }}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second, 'Repeat new password', {
                'label_attr': {'class': 'form-label'}
            }) }}

            {{ form_widget(form.plainPassword.second, {'attr': {
                'class': 'form-control',
                'placeholder': 'Repeat new password',
            }}) }}
        </div>
    </div>

    {% if not form.vars.valid %}
        <div class="card-alert alert alert-danger mt-6 mb-0">
            {% for error in form.vars.errors %}
                * {{ error.message }}<br />
            {% endfor %}
            {% for error in form.current_password.vars.errors %}
                * {{ error.message }}<br />
            {% endfor %}
            {% for error in form.plainPassword.first.vars.errors %}
                * {{ error.message }}<br />
            {% endfor %}
            {% for error in form.plainPassword.second.vars.errors %}
                * {{ error.message }}<br />
            {% endfor %}
        </div>
    {% endif %}

    <div class="card-body pt-0 border-top-0">
        <div class="form-footer">
            <div class="row">
                <div class="col">
                    <a class="btn btn-secondary" href="{{ path('fos_user_profile_show') }}">
                        <i class="fe fe-arrow-left mr-2"></i>Go back
                    </a>
                </div>
                <div class="col ml-auto">
                    <button type="submit" class="btn btn-primary">{{ 'change_password.submit'|trans }}</button>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
