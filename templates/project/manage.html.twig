{% extends '@Dashtainer/template.html.twig' %}

{% block content %}
<div class="container">
    <p>Project details:</p>

    <hr />

    <p>ID: {{ project.id }}</p>
    <p>Name: {{ project.name }}</p>
    <p>Slug: {{ project.name|urlize }}</p>

    <hr />

    {% if project.services is not empty %}
        {% for service in project.services %}
            <p>{{ service.name }}</p>
        {% endfor %}
    {% else %}
        <p>You have no services.</p>
    {% endif %}

    <p><a href="#" data-toggle="modal"
          data-target="#service-create-modal">Create a new service</a></p>
</div>

<div class="modal fade" id="service-create-modal" tabindex="-1" role="dialog"
     aria-labelledby="service-create-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="service-create-modal-title">Create a new service</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="{{ path('project.service.create.post', {
                    'projectId': project.id,
                }) }}" method="post" data-ajax>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <label for="name">Service Name</label>
                            <input type="text" class="form-control"
                                   id="name" name="name" placeholder=""
                                   value="" required data-error-container="name" />
                            <div class="invalid-feedback" data-error-container-name="name"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
