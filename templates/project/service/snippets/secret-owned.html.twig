<div class="d-flex align-items-end">
    <div class="p-2 w-100"><h4 class="mb-0">Owned Secrets</h4></div>
    <div class="p-2 flex-shrink-1">
        <a class="btn btn-outline-success"
           data-toggle="add-element"
           data-target="#owned_secrets-container"
           href="{{ path('project.service.block-add-secret.get', {
               'projectId': project.id,
           }) }}"><i
                class="fe fe-plus"></i> Create Secret</a>
    </div>
</div>

<div class="row mb-5">
    <div class="col">
        <hr class="my-0 mb-3" />

        <div class="table-responsive scrollable-container">
            <table class="table table-striped table-vcenter table-scroll">
                <thead class="bg-white">
                <tr>
                    <th class="w-50">Name</th>
                    <th class="w-50">Value</th>
                    <th class="w-1"></th>
                </tr>
                </thead>
                {% if secrets.internal is not empty %}
                    <tbody>
                    {% for secret in secrets.internal %}
                        {% set projectSecret = secret.projectSecret %}
                        <tr>
                            <td>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><em>/run/secrets/</em></span>
                                    </div>
                                    <input type="text" class="form-control" disabled
                                           value="{{ projectSecret.name }}" />
                                </div>
                            </td>
                            <td>
                                <input type="text" class="form-control" disabled
                                       value="{{ projectSecret.contents }}" />
                            </td>
                            <td><div title="This is an internal Secret. You cannot delete or change it here."
                                     class="btn btn-sm text-muted" data-toggle="tooltip"><i
                                        class="fe fe-slash"></i></div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                {% endif %}
                <tbody id="owned_secrets-container">
                <tr class="empty-table">
                    <td colspan="3">
                        To add a Secret, click "Create Secret" above.
                    </td>
                </tr>
                {% for secret in secrets.owned %}
                    {% set projectSecret = secret.projectSecret %}
                    <tr id="owned_secrets-{{ projectSecret.id }}-row">
                        <td>
                            <input type="hidden" id="owned_secrets-{{ projectSecret.id }}-id"
                                   name="owned_secrets[{{ projectSecret.id }}][id]"
                                   value="{{ projectSecret.id }}" />

                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><em data-toggle="tooltip"
                                       title="Will be available at /run/secrets/{name}">/run/secrets/</em></span>
                                </div>
                                <input type="text" class="form-control" maxlength="64"
                                       id="owned_secrets-{{ projectSecret.id }}-name"
                                       name="owned_secrets[{{ projectSecret.id }}][name]" placeholder=""
                                       value="{{ projectSecret.name }}" required data-mask-type="secret"
                                       data-error-container="owned_secrets-{{ projectSecret.id }}-name-error" />
                            </div>

                            <div class="invalid-feedback p-3 mb-2 bg-danger text-white"
                                 data-error-container-name="owned_secrets-{{ projectSecret.id }}-name-error"></div>
                        </td>
                        <td>
                            <input type="text" class="form-control" maxlength="255"
                                   id="owned_secrets-{{ projectSecret.id }}-contents"
                                   name="owned_secrets[{{ projectSecret.id }}][contents]"
                                   placeholder="" value="{{ projectSecret.contents }}" />
                        </td>
                        <td><a href="#" class="btn btn-outline-danger btn-sm"
                               data-toggle="delete-element"
                               data-target="#owned_secrets-{{ projectSecret.id }}-row"><i class="fe fe-x"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
