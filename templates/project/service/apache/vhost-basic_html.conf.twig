<VirtualHost *:8080>
    ServerName localhost
    ServerAlias *
    DocumentRoot {{ form.document_root }}

    <Directory "{{ form.document_root }}">
        Options Indexes FollowSymlinks MultiViews
        AllowOverride All
        Require all granted
        DirectoryIndex index.html
    </Directory>

    SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1
</VirtualHost>
