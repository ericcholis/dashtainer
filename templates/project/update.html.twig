{% extends '@Dashtainer/template.html.twig' %}

{% block content %}
<div class="container py-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('index.get') }}">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('project.index.get') }}">Projects</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ project.name }}</li>
        </ol>
    </nav>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form action="{{ path('project.update.post', {
                'projectId': project.id,
            }) }}" method="post" data-ajax>
                <div class="form-group">
                    <label class="form-label" for="name">Project Name</label>
                    <input type="text" class="form-control"
                           id="name" name="name" placeholder=""
                           value="{{ project.name }}" required data-error-container="name"/>
                    <div class="invalid-feedback"
                         data-error-container-name="name"></div>
                </div>

                <hr class="mb-4" />

                <button class="btn btn-primary btn-lg btn-block" type="submit">Update Project</button>

                <p class="my-3"><a href="#" data-toggle="modal"
                      data-target="#project-delete-modal">Delete project</a></p>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="project-delete-modal" tabindex="-1" role="dialog"
     aria-labelledby="project-delete-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="project-delete-modal-title">Delete this project?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form action="{{ path('project.delete.post', {'projectId': project.id}) }}"
                  method="post" data-ajax>
                <div class="modal-body">
                    <p>This will also delete all services, networks, secrets and volumes attached
                        to this project.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
