{% extends '@Dashtainer/template.html.twig' %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('project.index.get') }}">Projects</a></li>
<li class="breadcrumb-item"><a href="{{ path('project.view.get', {
        'projectId': project.id,
    }) }}">{{ project.name }}</a></li>
<li class="breadcrumb-item active" aria-current="page">Update</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-3 order-lg-1 mb-4">
        <a href="#" data-toggle="modal"
           data-target="#project-create-modal"
           class="btn btn-block btn-primary mb-6">
            <i class="fe fe-plus mr-2"></i>Create a new Project
        </a>
        <div class="list-group list-group-transparent mb-0">
            <a href="#" class="list-group-item list-group-item-action"><span
                    class="icon mr-3"><i class="fe fe-alert-triangle"></i></span>Alerts</a>
            <a href="#" class="list-group-item list-group-item-action"><span
                    class="icon mr-3"><i class="fe fe-user"></i></span>Avatars</a>
        </div>
    </div>

    <div class="col-lg-9">

<form class="card" action="{{ path('project.update.post', {
    'projectId': project.id,
}) }}" method="post" data-ajax>
    <div class="card-body">
        <div class="row">
            <div class="form-group col">
                <label class="form-label" for="name">Project Name</label>
                <input type="text" class="form-control"
                       id="name" name="name" placeholder=""
                       value="{{ project.name }}" required data-error-container="name"/>
                <div class="invalid-feedback"
                     data-error-container-name="name"></div>
            </div>
        </div>

        <hr class="my-6" />

        <button class="btn btn-primary btn-lg btn-block" type="submit">Update Project</button>

        <p class="my-3"><a href="#" data-toggle="modal"
              data-target="#project-delete-modal">Delete project</a></p>
    </div>
</form>

    </div>
</div>

<div class="modal fade" id="project-delete-modal" tabindex="-1" role="dialog"
     aria-labelledby="project-delete-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="project-delete-modal-title">Delete this project?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <form action="{{ path('project.delete.post', {'projectId': project.id}) }}"
                  method="post" data-ajax>
                <div class="modal-body">
                    <p>This will also delete all services, networks, secrets and volumes attached
                        to this project.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
