{% extends '@Dashtainer/template.html.twig' %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('project.index.get') }}">Projects</a></li>
<li class="breadcrumb-item"><a href="{{ path('project.view.get', {
        'projectId': project.id,
    }) }}">{{ project.name }}</a></li>
<li class="breadcrumb-item" aria-current="page"><a href="{{ path('project.network.index.get', {
        'projectId': project.id,
    }) }}">Networks</a></li>
<li class="breadcrumb-item active" aria-current="page">{{ network.name }}</li>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-lg-3 order-lg-1 mb-4">
        <div class="alert alert-primary text-center">
            Manage Network
        </div>
        <div class="list-group list-group-transparent mb-0">
            <a href="#"
               class="list-group-item list-group-item-action"><span
                    class="icon mr-3"><i class="fe fe-alert-triangle"></i></span>Edit Project</a>
            <a href="#"
               class="list-group-item list-group-item-action"><span
                    class="icon mr-3"><i class="fe fe-user"></i></span>Export Project</a>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="card">
            <div class="card-body">
                <div class="text-wrap p-lg-6">
                    <h3>{{ network.name }}</h3>

                    <p>ID: {{ network.id }}</p>
                    <p>Name: {{ network.name }}</p>
                    <p><a href="{{ path('project.network.update.get', {
                            'projectId': project.id,
                            'networkId': network.id,
                        }) }}">Edit network</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
